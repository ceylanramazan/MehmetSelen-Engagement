rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow uploads to engagement-uploads folder
    match /engagement-uploads/{allPaths=**} {
      // Allow uploads up to 100MB for authenticated users
      allow create: if request.auth != null 
                   && request.resource.size < 100 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*|video/.*|audio/.*');
      // Allow reads for everyone
      allow read: if true;
    }
    
    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
